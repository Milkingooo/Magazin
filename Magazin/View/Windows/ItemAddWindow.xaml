<Window x:Class="Magazin.View.Windows.ItemAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Magazin.View.Windows"
        mc:Ignorable="d"
        Title="Выдача товара" Height="350" Width="400" Loaded="Window_Loaded" >
    <Grid Background="BlueViolet">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label x:Name="nameitem" Height="40" Width="250"  HorizontalContentAlignment="Center" FontSize="15"/>
            <ComboBox x:Name="cb" Height="20" Width="100 "/>
            <Label x:Name="access" Height="25" Width="150" Content="" Margin="0,5,0,0"/>
            <Label Height="25" Width="200" Content="Введите количество инвентаря" HorizontalContentAlignment="Center"/>
            <TextBox x:Name="tb" Height="25" Width="150" />
            <Button Height="30" Width="100" Margin="0,5,0,0" Content="Выдать" 
                    Background="White" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
